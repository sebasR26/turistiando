<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondob"
    tools:context=".Ampliandoturismo">

    <TextView
        android:id="@+id/nombreAmpliandoTurismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.03"
        />

    <ImageView
        android:id="@+id/imagenAmpliandoTurismo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lturismo2"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/nombreAmpliandoTurismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.06"
        app:layout_constraintHorizontal_bias="0.01"
        />

    <ImageView
        android:id="@+id/fotoAdicionalTurismo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lturismo2"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/nombreAmpliandoTurismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.06"
        app:layout_constraintHorizontal_bias="0.99"
        />

    <ImageView
        android:id="@+id/imagenValoracionTurismo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/valoracion"
        app:layout_constraintTop_toBottomOf="@+id/imagenAmpliandoTurismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.4"
        />

    <TextView
        android:id="@+id/valoracionAmpliandoRestauant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/gold"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoTurismo"
        app:layout_constraintStart_toEndOf="@+id/imagenValoracionTurismo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.11"
        app:layout_constraintHorizontal_bias="0.05"

        />

    <TextView
        android:id="@+id/comentarioTurismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comentario"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imagenValoracionTurismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.06"
        />

    <ImageView
        android:id="@+id/imagenUsuarioTurismo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/usuario"
        app:layout_constraintTop_toBottomOf="@+id/comentarioTurismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        />

    <TextView
        android:id="@+id/descripcionAmpliandoTurismo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consecteturadipiscing elit, "
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/comentarioTurismo"
        app:layout_constraintStart_toEndOf="@+id/imagenUsuarioTurismo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintHorizontal_bias="0.3"
        />

    <TextView
        android:id="@+id/PrecioAmpliarTurismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10000"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/descripcionAmpliandoTurismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />

    <Button
        android:id="@+id/botonAmpliandoturismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESERVAR"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/PrecioAmpliarTurismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>